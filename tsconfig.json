{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["node_modules/@types", "./example/typings.d.ts"],
    "baseUrl": ".",
    "paths": {
      "@cs125/react-jitsi": ["."]
    }
  }
}
